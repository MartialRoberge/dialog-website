# Configuration OVH pour déploiement automatique
# Ce fichier configure OVH pour exécuter automatiquement le build

# Commande à exécuter après le pull Git
POST_PULL_COMMAND="./ovh-deploy.sh"

# Répertoire de destination
DEST_DIR="/www"

# Variables d'environnement
export NODE_ENV=production
export NPM_CONFIG_PRODUCTION=false

# Script de déploiement
DEPLOY_SCRIPT="ovh-deploy.sh"

# Hooks de déploiement
POST_DEPLOY_HOOK="echo '✅ Site Dialog déployé avec succès'"

# Configuration du serveur web
WEB_SERVER_CONFIG="Apache"
REWRITE_ENGINE="On"
